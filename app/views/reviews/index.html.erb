<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<h2>Reviews:</h2>
<div class = 'review-container'>
<% @reviews.each do |review| %>

<div class='review-tile'>
    <h3><%= link_to review.restaurant.name, restaurant_path(review.restaurant) %> | Review by: <%= link_to review.user.name, user_path(review.user) %></h3>
    Rating: <% review.rating.times do  %>
        <span class="fa fa-star checked"></span>
    <% end %>
    <% if (10 - review.rating) > 0 %>
        <% (10 - review.rating).times do  %>
            <span class="fa fa-star"></span>
        <% end %>
    <% end %>
    <p> <%= review.content %></p>
    <%= link_to "See Full Post and Comments", review_path(review)%>
</div>
<% end %>
</div>