<h1><%= @user.username %> - <%= @user.name %></h1>

<p><%= @user.bio %></p>

<h3><%= "Reviews:" if @user.reviews %></h3>
<% @user.reviews.each do |review| %>
    <%= link_to review.restaurant.name, restaurant_path(review.restaurant)%></br>
    Rating: <%= review.rating %></br>
    <%= review.content %></br>
    <%= link_to 'Show Comments', review_path(review) %> </br></br>
<% end %>

<%= link_to 'Create New Review', new_review_path %> </br>
<%= link_to 'Edit Profile', edit_user_path(@user) %>