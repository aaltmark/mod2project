<div class = 'review-tile'>
<h1>Review for <%= link_to @review.restaurant.name, restaurant_path(@review.restaurant) %>, by <%= link_to @review.user.name, user_path(@review.user) %></h1>
<div class = 'stars'> <% @review.rating.times do  %>
    <span class="fa fa-star checked"></span>
<% end %>
<% if (10 - @review.rating) > 0 %>
    <% (10 - @review.rating).times do  %>
        <span class="fa fa-star"></span>
    <% end %>
<% end %>
</div>

<p><%= @review.content %></p>
</div>

<h3>New Comment: </h3>
<%= form_for @comment do |f| %>
    <%= f.text_area :content %>
    <%= f.hidden_field :review_id %>
    <%= f.hidden_field :user_id, :value => @current_user.id %>
    <%= f.submit %>
<% end %>