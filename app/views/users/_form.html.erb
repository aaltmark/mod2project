<% if flash[:errors] %>
    <% flash[:errors].each do |e| %>
        <%= e %>
    <% end %>
<% end %>

<%= form_for @user do |f| %>
    <%= f.label :username %>
    <%= f.text_field :username %> </br>

    <%= f.label :name %>
    <%= f.text_field :name %> </br>

    <%= f.label :password %>
    <%= f.password_field :password %> </br>

    <%= f.label :location %>
    <%= f.text_field :location %> </br>

    <%= f.label :photo_url %>
    <%= f.text_field :photo_url %> </br>

    <%= f.label :bio %>
    <%= f.text_area :bio %> </br>

    <%= f.submit %>
<% end %>